<div class="title">Productos Registrados</div>
</br>
<table class="tabla2">
    <thead>
        <tr class="tabla2">
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Nombre" %>
                    <span>Nombre del Producto</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Restaurante" %>
                    <span>Restaurante al que pertenece el Producto</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Categoría" %>
                    <span>Categoía del Producto ("RACION", "CALDOS", "PESCADOS", "CARNES", "ENSALADAS", "BOCADILLO", "POSTRE", "BEBIDA", "BEBIDAS ALCOHOLICAS", "APERITIVO", "TACO", "BURRITO", "WRAP", "GENERAL", "EXTRAS")</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Ingredientes" %>
                    <span>Ingredientes que lleva el Producto</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Precio" %>
                    <span>Precio de venta del Producto al público</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Fecha de alta" %>
                    <span>Fecha de registro del Producto</span> 
                </div>
            </th>
            <th class="tabla2">
                <div class="cssToolTip">
                    <%= "Fecha modificación" %>
                    <span>Fecha de última modificación del Producto</span> 
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |total_products| %>
            <tr class="tabla2">
                <td class="tabla2"><%= total_products.name %></td>
                <td class="tabla2"><%= total_products.restaurant.name %></td>
                <td class="tabla2"><%= Product::PRODUCT_CATEGORY[total_products.type_product] %></td>
                <td class="tabla2"><div id="container"><%= total_products.ingredients %></div></td>
                <td class="tabla2"><%= total_products.price %> €/Unidad</td>
                <td class="tabla2"><%= total_products.created_at %></td>
                <td class="tabla2"><%= total_products.updated_at %></td>
            </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr class="tabla2">
            <th class="tabla2" colspan="11">
                <div class="pagination">
                    <div class="digg_pagination">
                        <%= will_paginate @products, :container => false %>
                    </div>
                </div>
            </th>
        </tr>
    </tfoot>
</table>