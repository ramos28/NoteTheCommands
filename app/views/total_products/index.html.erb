<div class="title">Productos Registrados</div>
</br>
<table>
    <thead>
        <tr>
            <th>Producto</th>
            <th>Restaurante perteneciente</th>
            <th>Categoría producto</th>
            <th>Ingredientes"</th>
            <th>Precio unidad</th>
            <th>Fecha de alta"</th>
            <th>Fecha modificación"</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |total_products| %>
            <tr>
                <td><%= total_products.name %></td>
                <td><%= total_products.restaurant.name %></td>
                <td><%= Product::PRODUCT_CATEGORY[total_products.type_product] %></td>
                <td><%= total_products.ingredients %></td>
                <td class="price"><%= number_to_currency(total_products.price, :unit => "€") %></td>
                <td><%= total_products.created_at %></td>
                <td><%= total_products.updated_at %></td>
            </tr>
        <% end %>
    </tbody>
    <tfoot>
        <%= will_paginate @products %>
    </tfoot>
</table>