<%= form_for @takeaway do |f| %>
    <%= f.error_messages %>
    <div class="field">
        <%= f.label :nombre %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :fecha_recogida %><br />
        <%= f.date_field :date %>
    </div>
    <div class="field">
        <%= f.label :hora %><br />
        <%= f.time_field :hour %>
    </div>
    <div class="field">
        <%= f.label :producto %><br />
        <%= f.select :product_id, options_from_collection_for_select( Product.all, :id, :name)%>
    </div>
    <div class="field">
        <%= f.label :cantidad %><br />
        <%= f.text_field :quantity %>
    </div>
    <%= f.hidden_field :restaurant_id, :value => @current_restaurant %>
    <div class="field">
        <%= f.submit %>
    </div>
<% end %>