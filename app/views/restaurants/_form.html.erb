<%= form_for @restaurant do |f| %>
    <%= f.error_messages %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </p>
    <p>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </p>
    <p>
        <%= f.label :city %>
        <%= f.text_field :city %>
    </p>
    <p>
        <%= f.label :country %>
        <%= f.text_field :country %>
    </p>
    <p>
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p> 
    <p>
        <%= f.label :opening_hours %>
        <%= f.text_field :opening_hours %>
    </p>    
    <p><%= f.submit %></p>
<% end %>