<%= form_for @blog do |f| %>
    <%= f.error_messages %>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br />
        <%= f.text_area :description, :cols => 30, rows: 5 %>
    </p>
    <%= f.hidden_field :restaurant_id, :value => @current_restaurant %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <p><%= f.submit %></p>
<% end %>
