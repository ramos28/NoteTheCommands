<%= form_for @blog do |f| %>
    <%= f.error_messages %>
    <div class="field">
        <%= f.label :noticia %>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :descripción %>
        <%= f.text_area :description, :cols => 100, rows: 10, placeholder: "Redacción de la Nueva Noticia del Blog..." %>
    </div>
    <%= f.hidden_field :restaurant_id, :value => @current_restaurant.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="field">
        <p><%= f.submit 'Crear Noticia', :class => 'boton grey' %></p>
    </div>
    </br></br></br>
<% end %>
