<div class="menu">
    <div class="muestra-menus">
        </br></br></br></br></br><div class="menu_accion">Menu</div>
        <p>
            <strong>Nombre:</strong>
            <%= @menu.name %>
        </p>
        <p>
            <strong>Tipo menu:</strong>
            <%= Menu::MENU_CATEGORY[@menu.type_menu] %>
        </p>
        <p>
            <strong>Precio:</strong>
            <%= @menu.price %> €
        </p>
        <p>
            <strong>Descripción:</strong>
            <%= @menu.description %>
        </p>
        <p>
            <%= link_to "Edit", edit_menu_product_path(@menu) %> |
            <%= link_to "Destroy", @menu, :confirm => 'Are you sure?', :method => :delete %> |
            <%= link_to "View All", menus_path %>
        </p>
    </div>

    <div class="muestra-tabla-menus"> 
        <div class="letra_menu">Menú <%= Menu::MENU_CATEGORY[@menu.type_menu] %></div>
            <div class="menu_tipo">Entrante</div>
            <% @menu.menu_products.each do |mp| %>
                <% if mp.category == 0 %>
                    <div class="menu_tipo_seleccion"><td><%= mp.product.name %>: (<%= mp.product.description %>)</td></div>
                <% end %>
            <% end %>
            <div class="menu_tipo">Primer Plato</div>
            <% @menu.menu_products.each do |mp| %>
                <% if mp.category == 1 %>
                    <div class="menu_tipo_seleccion"><td><%= mp.product.name %>: (<%= mp.product.description %>)</td></div>
                <% end %>
            <% end %>
            <div class="menu_tipo">Segundo Plato</div>
            <% @menu.menu_products.each do |mp| %>
                <% if mp.category == 2 %>
                    <div class="menu_tipo_seleccion"><td><%= mp.product.name %>: (<%= mp.product.description %>)</td></div>
                <% end %>
            <% end %>
            <div class="menu_tipo">Postre</div>
            <% @menu.menu_products.each do |mp| %>
                <% if mp.category == 3 %>
                    <div class="menu_tipo_seleccion"><td><%= mp.product.name %>: (<%= mp.product.description %>)</td></div>
                <% end %>
            <% end %>
            <div class="menu_tipo">Bebida</div>
            <% @menu.menu_products.each do |mp| %>
                <% if mp.category == 4 %>
                    <div class="menu_tipo_seleccion"><td><%= mp.product.name %></td></div>
                <% end %>
            <% end %>
        <div class="menu_tipo">Precio:   <%= @menu.price %> €</div>
    </div>

    <div class="muestra-eleccion">
        </br></br></br></br><div class="menu_accion">Insertar Producto</div>
        <%= form_for :menu_product, url: menu_products_path do |f| %>
            <div class="field">
                </br><%= f.label :category %>
                <%= f.select :category, options_for_select(MenuProduct::CONTENT_CATEGORY.map.with_index {|index, value| [index, value]})%>
            </div>
            <div class="field">
                </br><%= f.label :producto %><br />
                <%= f.select :product_id, options_from_collection_for_select( Product.where("restaurant_id = ?", "#{@current_restaurant.id}"), :id, :name)%>
            </div>
            </br><%= f.hidden_field :menu_id, value: @menu.id %>
            <%= f.submit 'Guardar Productos en el Menú'%>
        <% end %>
    </div>
</div>