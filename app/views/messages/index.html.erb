<div class="title">Mensajes de '<%= current_user.user_name %>'</div>
<table class="pretty">
    <thead>
        <tr>
            <th>Asunto </th>
            <th> Emisor. De: </th>
            <th> Receptor. Para: </th>
            <th> Descripci√≥n </th>
            <th> Esta leido </th>
        </tr>
    </thead>
    <tbody>
        <% @messages_in.each do |message_in| %>
            <tr>
                <td><%= message_in.subject %></td>
                <td><%= message_in.user_from %></td>
                <td><%= message_in.user_for %></td>
                <td class="contenido"><%= message_in.description %></td>
                <% if message_in.is_view == 0 %>
                    <td class="b1"><%= Message::VIEW_CATEGORY[message_in.is_view]%></td>
                <% else %>
                    <td class="b2"><%= Message::VIEW_CATEGORY[message_in.is_view]%></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
    <tfoot>
        <%= will_paginate @messages_in %>
    </tfoot>
</table>

<p><%= button_to "New message", new_message_path, :method => "get" %></p>
