<%= form_for @message do |f| %>

    <%= f.error_messages %>
    <p>
        <%= f.label :subject %><br />
        <%= f.text_field :subject %>
    </p>
    <!-- Los mensajes deberian de mandarse de restaurante a usuarios y de usuarios a restaurante -->
    <p>
        <%= f.label :user_from %><br />
        <%= f.select :user, options_from_collection_for_select( User.all, :id, :email)%>
    </p>
    <p>
        <%= f.label :user_for %><br />
        <%= f.select :user, options_from_collection_for_select( User.all, :id, :email )%>
    </p>
    <p>
        <%= f.label :description %><br />
        <%= f.text_area :description, :cols => 30, rows: 5 %>
    </p>
    <p><%= f.submit %></p>
<% end %>
