<%= form_for @message do |f| %>
    <%= f.error_messages %>
    <div class="field">
        <%= f.label :subject %><br />
        <%= f.text_field :subject %>
    </div>
    <div class="field">
        <%= f.label :user_for %><br />
        <%= f.select :user_for, options_from_collection_for_select( User.where("id != ? AND email NOT LIKE ?", "#{current_user.id}", "#{'guest_'}%"), :email, :email)%>
    </div>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, :cols => 30, rows: 5 %>
    </div>
    <%= f.hidden_field :user_from, :value => current_user.email %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="field">
        <%= f.submit %>
    </div>
<% end %>
