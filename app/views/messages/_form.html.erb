<%= form_for @message do |f| %>
    <%= f.error_messages %>
    <div class="field">
        <%= f.label :subject %><br />
        <%= f.text_field :subject %>
    </div>
    <!-- Los mensajes deberian de mandarse de restaurante a usuarios y de usuarios a restaurante -->
    <div class="field">
        <%= f.label :user_from %><br />
        <%= f.select :user, options_from_collection_for_select( User.all, :id, :email)%>
    </div>
    <div class="field">
        <%= f.label :user_for %><br />
        <%= f.select :user, options_from_collection_for_select( User.all, :id, :email )%>
    </div>
    <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, :cols => 30, rows: 5 %>
    </div>
    <div class="field">
        <%= f.submit %>
    </div>
<% end %>
