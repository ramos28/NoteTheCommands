<h1>Comandas del Restaurante</h1>

<% if @current_role == 0 %>
	<div class ="muestra-tabla">
		<table class="pretty">
		    <tr>
		        <th><%= "Comanda" %></th>
		        <th><%= "Restaurante" %></th>
		        <th><%= "Mesa" %></th>
		        <th><%= "Menu" %></th>
		        <th><%= "Producto" %></th>
		        <th><%= "Descripcion" %></th>
		        <th><%= "Esta Finalizada" %></th>
		    </tr>
		    <% @commands.each do |command| %>
		    <%= command.location.restaurant_id %>
		    <%= @current_restaurant %>
		        <% if command.location.restaurant_id == @current_restaurant %>
		            <tr>
		                <td><%= command.title %></td>
		                <td><%= command.location.restaurant_id %></td>
		                <td><%= command.location.place %></td>
		                <td><%= command.menu.type_menu %></td>
		                <td><%= command.product.name %></td>
		                <td><%= command.description %></td>
		                <td><%= command.is_end %></td>
		                <td><%= link_to "Edit Command", edit_command_path(command) %></td>                
		            </tr>
		        <% end %>
		        <%= link_to "Back", location_path(command.location.place) %>
		    <% end %>
		</table>
		<%= will_paginate @commands %>
	</div>


	<div class="muestra-opciones">
		<script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script> 
		<script type="text/javascript">
			jQuery(document).ready(function() {
			jQuery("a.mostrar").click(function(){
			jQuery("div.chatbox").toggle("slow");
			return false;
			});
			});
		</script>
		<a href="#" class="mostrar">AÃ±adir una nueva comanda</a><br/>
		<div class="chatbox">
			<%= render 'form' %>
			<p><%= link_to "Back to List", commands_path %></p>
	    </div>
	</div>
<% else %>
	<table class="pretty">
		    <tr>
		        <th><%= "Comanda" %></th>
		        <th><%= "Restaurante" %></th>
		        <th><%= "Mesa" %></th>
		        <th><%= "Menu" %></th>
		        <th><%= "Producto" %></th>
		        <th><%= "Descripcion" %></th>
		        <th><%= "Esta Finalizada" %></th>
		    </tr>
		    <% @commands.each do |command| %>
		    <%= command.location.restaurant_id %>
		    <%= @current_restaurant %>
		        <% if command.location.restaurant_id == @current_restaurant %>
		            <tr>
		                <td><%= command.title %></td>
		                <td><%= command.location.restaurant_id %></td>
		                <td><%= command.location.place %></td>
		                <td><%= command.menu.type_menu %></td>
		                <td><%= command.product.name %></td>
		                <td><%= command.description %></td>
		                <td><%= command.is_end %></td>
		                <td><%= link_to "Edit Command", edit_command_path(command) %></td>                
		            </tr>
		        <% end %>
		        <%= link_to "Back", location_path(command.location.place) %>
		    <% end %>
		</table>
		<%= will_paginate @commands %>
<% end %>