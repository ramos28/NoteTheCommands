<%= form_for @command do |f| %>
      <%= f.error_messages %>
      <div class="field">
            <%= f.label :nombre_comanda %>
            <%= f.text_field :title %>
      </div>
      <div class="field">
            <%= f.label :localización %>
            <%= f.select :location_id, options_from_collection_for_select( Location.all, :id, :place)%>
      </div>
      <div class="field">
            <%= f.label :menu %>
            <%= f.select :menu_id, options_from_collection_for_select( Menu.all, :id, :type_menu)%>
      </div>
      <div class="field">
            <%= f.label :producto %>
            <%= f.select :product_id, options_from_collection_for_select( Product.all, :id, :name)%>
      </div>
      <div class="field">
            <%= f.label :descripción %><br />
            <%= f.text_area :description %>
      </div>
      <div class="field">
            <%= f.submit %>
      </div>
<% end %>