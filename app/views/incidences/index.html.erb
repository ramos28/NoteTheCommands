                            <td class="tabla4"><%= incidence.created_at.strftime("%d %B %Y -- %X") %></td>
                            <td class="tabla4"><%= incidence.user.user_name %></td>
                            <% if !incidence.is_solved %>
                                <td class="b1"><%= incidence.is_solved %></td>
                            <% else %>
                                <td class="b2"><%= incidence.is_solved %></td>
                            <% end %>
