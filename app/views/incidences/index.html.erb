                                <td class="inc4"><%= Incidence::PRIORITY_CATEGORY[incidence.priority] %></td>
                            <% else %>
                                <td class="inc5"><%= Incidence::PRIORITY_CATEGORY[incidence.priority] %></td>
                            <% end %>
