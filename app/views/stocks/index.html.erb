<div class="title">Stock del Restaurante</div>
</br>
<table class="tabla2">
    <thead>
        <tr class="tabla2">
            <%= form_tag stocks_path, method: :get do %>
                <th class="tabla2" title="Nombre del Restaurante">Restaurante</th>
                <th class="tabla2" title="Tipo de Producto que puede ser: RACION, CALDOS, PESCADOS, CARNES, ENSALADAS, BOCADILLO, POSTRE, BEBIDA, BEBIDAS ALCOHOLICAS, APERITIVO, TACO, BURRITO, WRAP, GENERAL, EXTRAS">Tipo Producto</th>
                <th class="tabla2" title="Nombre del Producto">Nombre Producto</th>
                <th class="tabla2" title="Breve descripcion del Stock de dicho producto">Descipción<p><%= text_field_tag :description_stock, params[:description_stock], class: "form-control", placeholder: "Descripcion Stock" %></p></th>
                <th class="tabla2" title="Coste por el que se vende el producto">Coste de venta</th>
                <th class="tabla2" title="Cantidad de productos que hay en el Sctok">Cantidad en Stock</th>
                <th class="tabla2" title="Coste de la materia prima por unidad">Coste Materia Prima Unidad</th>
                <th class="tabla2" title="Coste de la materia prima total de un producto en stock">Coste Total Materia Prima</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @stocks.each do |stock| %>
            <tr class="tabla2">
                <td class="tabla2"><%= stock.product.restaurant.name %></td>
                <td class="tabla2"><%= Product::PRODUCT_CATEGORY[stock.product.type_product] %></td>
                <td class="tabla2"><%= stock.product.name %></td>
                <td class="tabla2"><%= stock.description_stock %></td>
                <td class="tabla2" class="price"><%= number_to_currency(stock.product.price, :unit => "€") %></td>
                <td class="tabla2"><%= stock.quantity %></td>
                <td class="tabla2" class="price"><%= number_to_currency(stock.price_buy_unity, :unit => "€") %></td>
                <td class="tabla2" class="price"><%= number_to_currency(stock.quantity * stock.price_buy_unity, :unit => "€") %></td>
                <td><%= link_to "Editar Stock", edit_stock_path(stock), :class => 'boton grey' %></td>
            </tr>
        <% end %>
    </tbody>
    <tfoot>
        <tr class="tabla2">
            <th class="tabla2" colspan="8">
                <%= will_paginate @stocks %> 
            </th>
        </tr>
    </tfoot>
</table>

<p><%= button_to "Añadir Producto al Stock", new_stock_path, :method => "get", :class => 'boton grey' %></p>

