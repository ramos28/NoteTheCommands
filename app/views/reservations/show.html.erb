<div class="title">Reserva</div>
<div id="padre">  
    <div id="hijo3">
        <p>
          <strong>Nombre:</strong>
          <%= @reservation.name %>
        </p>
        <p>
          <strong>Número Personas:</strong>
          <%= @reservation.num_persons %>
        </p>
        <p>
          <strong>Día de la reserva</strong>
          <%= @reservation.date %>
        </p>
        <p>
          <strong>Hora de la reserva:</strong>
          <%= @reservation.hour.strftime("%X") %>
        </p>
        <p>
          <strong>Restaurante:</strong>
          <%= @reservation.restaurant.name %>
        </p>
        <p>
          <strong>Reserva realizada por:</strong>
          <%= @reservation.user.user_name %>
        </p>
        <p>
          <strong>Teléfono de contacto:</strong>
          <%= @reservation.phone %>
        </p>
        <p>
          <%= link_to "Modificar", edit_reservation_path(@reservation), style: "color: black" %> |
          <%= link_to "Eliminar", @reservation, :method => :delete, data: { confirm: "¿Está seguro que desea eliminar la Reserva?"}, style: "color: black" %> |
          <%= link_to "Terminar", start_path, :class => 'boton grey' , data: { confirm: "¿Está seguro que desea realizar la Reserva?"} %>
        </p>
    </div>
</div>
