<h1>Reservas del Restaurante</h1>

<%= form_tag reservations_path, :method => 'get', :id => "reservations_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :fecha => nil %>
  </p>
  <div id="products"><%= render 'reservations' %></div>
<% end %>

<p><%= link_to "New Reservations", new_reservation_path %></p>
