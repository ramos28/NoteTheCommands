<script src="//maps.google.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="title">Información de contacto</div>
</br>
<div class="contact">
	<div class="contact-map-container">
		</br><div class="accion-contacto">Localización Establecimiento</div>
		<div id="map-container">
		  <div id="map" ></div>
		</div>

		<script type="text/javascript">
			handler = Gmaps.build('Google');
			handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
			    markers = handler.addMarkers(<%=raw @hash.to_json %>);
			    handler.bounds.extendWith(markers);
			    handler.fitMapToBounds();
			});
		</script>
		</br>
	</div>
	<div class="contact-map-info">
		</br>
		<div class="accion-contacto">Información del Restaurante</div>
		</br>
		<% @restaurants.each do |restaurants| %>
			<p>
			    <strong>Nombre:</strong>
			    <%= restaurants.name %>
			</p>
			<p>
			    <strong>Teléfono:</strong>
			    <%= restaurants.phone %>
			</p>
			<p>
			    <strong>Dirección:</strong>
			    <%= restaurants.address %>
			</p>
			<p>
			    <strong>Ciudad:</strong>
			    <%= restaurants.city %>
			</p>
			<p>
			    <strong>País:</strong>
			    <%= restaurants.country %>
			</p>
			<p>
			    <strong>Código Postal:</strong>
			    <%= restaurants.postal_code %>
			</p>
			<p>
			    <strong>Email:</strong>
			    <%= restaurants.email %>
			</p>
			<p>
			    <strong>Horario de Apertura:</strong>
			    <%= restaurants.opening_hours %>
			</p>
			<p>
			    <strong>Latitud:</strong>
			    <%= restaurants.latitude %>
			</p>
			<p>
			    <strong>Longitud:</strong>
			    <%= restaurants.longitude %>
			</p>
   		<% end %>
   		</br>
	</div>
</div>