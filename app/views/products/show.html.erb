<div class="title">Producto</div>
    <p>
        <strong>Nombre:</strong>
        <%= @product.name %>
    </p>
    <p>
        <strong>Tipo producto:</strong>
        <%= Product::PRODUCT_CATEGORY[@product.type_product] %>
    </p>
    <p>
        <strong>Ingredientes del Producto:</strong>
        <%= @product.ingredients %>
    </p>
    <p>
        <strong>Preparación del Producto:</strong>
        <%= @product.preparation %>
    </p>
    <p>
        <strong>Precio:</strong>
        <%= @product.price %>
    </p>
    <p>
        <strong>Venta a menores:</strong>
        <%= @product.younger %>
    </p>

    <p>
    <%= link_to "Modificar", edit_product_path(@product), style: "color: white" %> |
    <%= link_to "Eliminar", @product, :method => :delete, data: { confirm: "¿Está seguro que desea eliminar el producto?"}, style: "color: white" %>
</p>